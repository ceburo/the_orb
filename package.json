{
  "name": "mia",
  "displayName": "Mia - The Orb",
  "description": "A visual progression game for VS Code that transforms your coding activity into XP.",
  "version": "0.1.2",
  "publisher": "NicolasBrouillet",
  "author": {
    "name": "Nicolas Brouillet"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.109.0"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "icon": "media/icon.png",
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "game",
    "rpg",
    "xp",
    "progression",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceburo/the_orb.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mia-view-container",
          "title": "Mia",
          "icon": "media/orb.svg"
        }
      ]
    },
    "views": {
      "mia-view-container": [
        {
          "type": "webview",
          "id": "mia.gameView",
          "name": "The Orb"
        }
      ]
    },
    "commands": [
      {
        "command": "mia.addXp",
        "title": "Add XP manually (Debug)"
      },
      {
        "command": "mia.reset",
        "title": "Reset Mia - The Orb Progress"
      }
    ]
  },
  "activationEvents": [
    "onView:mia.gameView"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}